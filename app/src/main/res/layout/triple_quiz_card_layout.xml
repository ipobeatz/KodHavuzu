<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView

        android:id="@+id/tripleRecyclerViewTextView"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="example"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tripleImageView2"
        app:layout_constraintTop_toBottomOf="@+id/tripleImageView3" />

    <ImageView
        android:id="@+id/tripleImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tripleRecyclerViewTextView2"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="example"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/tripleRecyclerViewTextView"
        app:layout_constraintStart_toEndOf="@+id/tripleRecyclerViewTextView3"
        app:layout_constraintTop_toBottomOf="@+id/tripleImageView2" />

    <ImageView
        android:id="@+id/tripleImageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tripleRecyclerViewTextView3"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:text="example"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tripleImageView" />

    <ImageView
        android:id="@+id/tripleImageView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="68dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/tripleImageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />


</androidx.constraintlayout.widget.ConstraintLayout>
